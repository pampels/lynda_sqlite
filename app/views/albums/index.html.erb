<div class="albums-container">
  <h1>Albums</h1>
  <% @albums.each do |album| %>
  <div class="album clearfix">
    <div class="cover-container">
      <%= image_tag album.image_path %>
    </div>
    <div class="album-details">
      <h2><span><%= link_to album.title, album %></span><span class="album-price"><%= album.price %></span></h2>
      <p><strong>Artist:</strong> <%= link_to album.artist.name, album.artist %></p>
      <p><strong>Released year:</strong> <%= album.published_date %></p>
      <p><strong>Genre:</strong> <%= album.genre %></p>
      <p><%= album.description %></p>
    </div>
  </div>
  <!-- <td><%# link_to 'Edit', edit_album_path(album) %></td> -->
  <!-- <td><%# link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
  <% end %>
</div>

