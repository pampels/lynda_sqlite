<div class="albums-container">
  <h1>OPMusic Store</h1>
  <h2>Your Shopping Cart</h2>

  <table>
  <thead>
    <tr>
      <th>&nbsl;</th>
      <th>Title</th>
      <th>Artist</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody>
    <% @cart.line_items.each do |item| %>
      <tr>
        <td><%= image_tag item.album.image_path, size: '20x20' %></td>
        <td><%= item.album.title %></td>
        <td><%= item.album.artist.name %></td>
        <td><%= item.quantity %></td>
        <td><%= number_to_currency(item.price * item.quantity) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>