<% if notice %>
<p id="notice" ><%= notice %></p>
<% end %>
<%= form_tag do |f| %>
  <fieldset>
    <legend>Please Log In</legend>

    <div class="field">
      <label for="username" >Username: </label>
      <%= text_field_tag :username, params[:username] %>
    </div>
    <div class="field">
      <label for="username" >Password: </label>
      <%= password_field_tag :password, params[:password], :size => 40 %>
    </div>
    <div class="actions">
      <%= submit_tag 'Login' %>
    </div>
  </fieldset>
<% end %>
